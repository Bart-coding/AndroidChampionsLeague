<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/parent_layout_match_result">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scorers_circle"
        android:id="@+id/image_team_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Name 1"
        android:id="@+id/team_match_name_1"
        android:layout_toRightOf="@+id/image_team_1"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_centerInParent="true"
            android:id="@+id/team_score_1"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_centerInParent="true"
            android:id="@+id/team_score_2"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/team_score_1"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Name 1"
        android:id="@+id/team_match_name_2"
        android:layout_toLeftOf="@+id/image_team_2"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textSize="15sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scorers_circle"
        android:layout_alignParentRight="true"
        android:id="@+id/image_team_2"/>
</RelativeLayout>