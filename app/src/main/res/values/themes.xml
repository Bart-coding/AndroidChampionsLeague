<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidChampionsLeague" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="themeName">light</item>
        <item name="colorPrimary">@color/main_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Own colors -->
        <item name="promotionColor">@color/promotion_light</item>
        <item name="fallColor">@color/fall_light</item>
        <item name="groupBackground">@color/group_b_light</item>
    </style>
    <style name="ThemeDark.AndroidChampionsLeague" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="themeName">dark</item>
        <item name="colorPrimary">@color/main_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/dark_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Own colors -->
        <item name="promotionColor">@color/promotion_dark</item>
        <item name="fallColor">@color/fall_dark</item>
        <item name="groupBackground">@color/group_b_dark</item>
    </style>
</resources>